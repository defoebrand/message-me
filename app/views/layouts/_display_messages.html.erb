<% if flash.each.any? %>
  <div class="ui container">
    <% flash.each do |name, msg| %>
      <% if name == 'notice' %>
        <div class="ui positive message">
      <% elsif name == 'alert' %>
        <div class="ui negative message">
      <% end %>
      <%= msg %>
      <i class="close icon"></i>
      </div>
    <% end %>
  </div>
<% end %>